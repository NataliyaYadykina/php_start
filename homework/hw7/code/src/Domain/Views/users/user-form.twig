<form action="{{ action }}" method="post">
    <input id="csrf_token" type="hidden" name="csrf_token" value="{{ csrf_token}}">

    <input hidden id="user_id" type="text" name="user_id" value="{{user_data.id_user}}">

    <p>
    <label for="login">Логин:</label>
    <input id="login" type="text" name="login" value="{{user_data.login}}">
  </p>
  <p>
    <label for="password">Пароль:</label>
    <input id="password" type="password" name="password">
  </p>
  <p>
    <label for="name">Имя:</label>
    <input id="name" type="text" name="name" value="{{user_data.user_name}}">
  </p>
  <p>
    <label for="lastname">Фамилия:</label>
    <input id="lastname" type="text" name="lastname" value="{{user_data.user_lastname}}">
  </p>
  <p>
    <label for="birthday">День рождения:</label>
    <input id="birthday" type="text" name="birthday" placeholder="ДД-ММ-ГГГГ" value="{{user_data.user_birthday_timestamp | date('d-m-Y') }}">
  </p>
  <p><input type="submit" value="Сохранить"></p>
</form>

